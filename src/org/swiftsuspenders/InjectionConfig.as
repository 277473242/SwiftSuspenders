	import flash.utils.Dictionary;
		/**	 * @author tschneidereit	 */	public class InjectionConfig 	{		/*******************************************************************************************		*								public properties										   *		*******************************************************************************************/		public static const INJECTION_TYPE_VALUE : int = 0;		public static const INJECTION_TYPE_CLASS : int = 1;		public static const INJECTION_TYPE_SINGLETON : int = 2;				public var request : Class;		public var response : Object;		public var injectionType : int;						/*******************************************************************************************		*								public methods											   *		*******************************************************************************************/		public function InjectionConfig(request : Class, response : Object, injectionType : int)		{			this.request = request;			this.response = response;			this.injectionType = injectionType;		}				public function getResponse(target : Object, injector : Injector, singletons : Dictionary) : Object		{			var result : Object;			if (injectionType == INJECTION_TYPE_VALUE)			{				injector.injectInto(response);				result = response;			}			else if (injectionType == INJECTION_TYPE_CLASS)			{				result = injector.instantiate(Class(response));			}			else if (injectionType == INJECTION_TYPE_SINGLETON)			{				result = singletons[request];				if (!result)				{					result = singletons[request] = injector.instantiate(Class(response));				}			}			return result;		}	}}